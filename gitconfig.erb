[user]
  name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
  email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[alias]
  co = checkout
  mg = merge
  pu = pull --rebase
  su = submodule update
  lg = log --graph --abbrev-commit --pretty=format:'%C(auto)%h %s %Cred(%an, %cr)%C(auto)%d%Creset'
  publish = "!f() { reviewer=""; if [ "x$2" != "x" ]; then reviewer="%r=$2"; fi; git push origin HEAD:refs/for/$1$reviewer; }; f"
  draft = "!sh -c 'git push origin HEAD:refs/drafts/$1' -"
  push-sandbox = "!sh -c 'git push -f --set-upstream origin HEAD:sandbox/$USER/$1' -"
[color]
  diff = auto
  status = auto
  branch = auto
[core]
  excludesfile = <%= ENV['HOME'] %>/.gitignore
  editor = atom --wait
  autocrlf = input
  ignorecase = false
[format]
  pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
[init]
  templatedir = ~/.git_templates
[push]
  default = simple
[rerere]
  enabled = true
[diff]
  tool = Kaleidoscope
[merge]
  tool = Kaleidoscope
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustexitcode = true
  prompt = false
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
  prompt = false
[github]
  user = <%= print("GitHub Username: "); STDOUT.flush; STDIN.gets.chomp %>
  token = <%= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>
